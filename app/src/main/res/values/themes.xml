    <style name="InputLayout">
        <item name="android:fontFamily">@font/montserratbold</item>
        <item name="android:textColorHint">@color/greyforms</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/yellow</item>
        <item name="shapeAppearance">@style/Rounded</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:fontFamily">@font/montserratbold</item>
        <item name="android:textColorHint">@color/greyforms</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/night</item>
        <item name="shapeAppearance">@style/Rounded</item>

    </style>

    <style name="InputLayout.1">
        <item name="android:fontFamily">@font/montserratbold</item>
        <item name="android:textColorHint">@color/greyforms</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/night</item>
        <item name="startIconDrawable">@drawable/search</item>
        <item name="shapeAppearance">@style/Rounded</item>
    </style>

    <style name="Rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="FabulashText">
        <item name="fontFamily">@font/spicy</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/night</item>
        <item name="shapeAppearance">@style/TextStroke</item>
    </style>

    <style name="ButtonsStyle4">
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/montserratregular</item>
        <item name="android:textColor">@color/night</item>
        <item name="android:background">@drawable/map</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="AutoCompleteTextViewStyle">
        <item name="android:popupBackground">@android:color/white</item> <!-- Fondo blanco para la lista desplegable -->
    </style>

    <style name="AlertDialogTheme">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/statusGreen</item>
        <item name="rippleColor">@color/night</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/pink</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CardsView" parent="CardView">
        <item name="android:foreground">@drawable/card_gradient</item>

    </style>

    <style name="CalendarMonth">
        <item name="android:textColor">@color/day</item>
    </style>

    <style name="CalendarDay">
        <item name="android:textColor">@color/night</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Calendar">
        <item name="android:colorAccent">@color/night</item>
        <item name="android:headerMonthTextAppearance">@style/CalendarMonth</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/spicy</item>
        <item name="android:dateTextAppearance">@style/CalendarDay</item>
    </style>

    <style name="RatingBar" parent="Theme.MaterialComponents.DayNight">
        <item name="ratingBarStyle">@style/Controls.RatingBar</item>
        <item name="colorControlActivated">@color/yellow_500</item>
        <item name="colorControlNormal">@color/orange_900</item>
    </style>

    <style name="Controls.RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:isIndicator">false</item>
    </style>

    <color name="yellow_500">#CEB900</color>
    <color name="orange_900">#F1A19B</color>
</resources>
