<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Fabulash" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

    </style>

    <style name="Theme.Fabulash" parent="Base.Theme.Fabulash">
    </style>

    <style name="Theme.AnimatedSplash.MySplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/night</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/avd_loadlogo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Fabulash</item>
    </style>

    <style name="TextStroke">
        <item name="android:letterSpacing">0.06</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="ButtonsStyle1">
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/spicy</item>
        <item name="backgroundTint">@color/night</item>
        <item name="height">43dp</item>
        <item name="android:width">155dp</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
    </style>

