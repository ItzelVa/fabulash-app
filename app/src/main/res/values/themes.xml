<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Fabulash" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Fabulash" parent="Base.Theme.Fabulash" />

    <style name="Theme.AnimatedSplash.MySplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/night</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/avd_loadlogo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Fabulash</item>
    </style>

    <style name="TextStroke">
        <item name="android:letterSpacing">0.06</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="ButtonsStyle1">
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/spicy</item>
        <item name="backgroundTint">@color/night</item>
        <item name="height">43dp</item>
        <item name="android:width">155dp</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="ButtonsStyle2">
        <item name="android:textColor">@color/night</item>
        <item name="fontFamily">@font/montserratregular</item>
        <item name="backgroundTint">#00FFFFFF</item>
    </style>

    <style name="ButtonsStyle3">
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/montserratregular</item>
        <item name="android:textColor">@color/night</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="ButtonsStyle3.1">
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/spicy</item>
        <item name="android:textColor">@color/night</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="ButtonsStyle3.2">
        <item name="cornerRadius">12dp</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
        <item name="backgroundTint">@color/night</item>
    </style>

    <style name="InputLayout">
        <item name="android:fontFamily">@font/montserratbold</item>
        <item name="android:textColorHint">@color/greyforms</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/yellow</item>
        <item name="shapeAppearance">@style/Rounded</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:fontFamily">@font/montserratbold</item>
        <item name="android:textColorHint">@color/greyforms</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/yellow</item>
        <item name="shapeAppearance">@style/Rounded</item>
    </style>

    <style name="InputLayout.1">
        <item name="android:fontFamily">@font/montserratbold</item>
        <item name="android:textColorHint">@color/greyforms</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/night</item>
        <item name="startIconDrawable">@drawable/search</item>
        <item name="shapeAppearance">@style/Rounded</item>
    </style>

    <style name="Rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="FabulashText">
        <item name="fontFamily">@font/spicy</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/night</item>
        <item name="shapeAppearance">@style/TextStroke</item>
    </style>

    <style name="ButtonsStyle4">
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/montserratregular</item>
        <item name="android:textColor">@color/night</item>
        <item name="android:background">@drawable/map</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
        <item name="iconTint">@null</item>
    </style>

</resources>
