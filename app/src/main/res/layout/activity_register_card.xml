<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterCard"
    android:background="@color/day">

    <ImageButton
        android:id="@+id/cardRegisterBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/ButtonsStyle2"
        android:layout_marginTop="8dp"
        android:src="@drawable/back_button"
        android:backgroundTint="#fff"
        android:contentDescription="@string/atr_s"
        android:padding="16dp"/>

    <ImageView
        android:id="@+id/imgRainbow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/little_rainbow"
        android:contentDescription="@string/fabulash"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/crcl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgOpenEye"
            android:layout_width="200dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/dark_open_eye"
            android:contentDescription="@string/fabulash"/>

        <TextView
            android:id="@+id/cardRegisterTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imgOpenEye"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:text="@string/registrar_tarjeta"
            android:textSize="40sp"
            android:fontFamily="@font/spicy"
            android:textColor="@color/night"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputCardName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/cardRegisterTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/nombreTitular"
            app:endIconMode="clear_text"
            style="@style/InputLayout"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nombreTitular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                android:nextFocusForward="@id/loginPwd"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputCardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/inputCardName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/numeroTarjeta"
            app:endIconMode="clear_text"
            style="@style/InputLayout"
            android:layout_marginTop="8dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/numeroTarjeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputCardDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/inputCardNumber"
            app:layout_constraintStart_toStartOf="@id/inputCardNumber"
            app:layout_constraintEnd_toStartOf="@+id/inputCardCvc"
            android:hint="@string/fechaTarjeta"
            app:endIconMode="clear_text"
            style="@style/InputLayout"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fechaTarjeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputCardCvc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/inputCardNumber"
            app:layout_constraintEnd_toEndOf="@id/inputCardNumber"
            app:layout_constraintStart_toEndOf="@+id/inputCardDate"
            android:hint="@string/cvcTarjeta"
            app:endIconMode="clear_text"
            style="@style/InputLayout"
            android:layout_marginTop="8dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cvcTarjeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/addCardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/inputCardCvc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/ButtonsStyle1_Green"
            android:textColor="@color/night"
            android:text="@string/agregar"
            android:layout_marginTop="40dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <ImageView
        android:id="@+id/imgDownRainbow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/down_rainbow"
        android:contentDescription="rainbow" />

</androidx.constraintlayout.widget.ConstraintLayout>