<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".review"
    android:background="@color/day"
    >
    <ImageView
        android:id="@+id/imgRainbow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/little_rainbow"
        android:contentDescription="@string/fabulash"/>
    <TextView
        android:id="@+id/registerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="24dp"
        android:text="@string/review"
        android:textSize="40sp"
        android:fontFamily="@font/spicy"
        android:textColor="@color/night"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/optionsReview"
        style="@style/SpinnerStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/registerTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"
        >
        <AutoCompleteTextView
            android:id="@+id/filterBarOptions"
            style="@style/AutoCompleteTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="none"
            android:text="Filtro"
            android:textColor="@color/greyforms" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ServiciooPersonal"
        style="@style/SpinnerStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/optionsReview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"
        >
        <AutoCompleteTextView
            android:id="@+id/filterBarServoPer"
            style="@style/AutoCompleteTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="none"
            android:text="Filtro"
            android:textColor="@color/greyforms" />

    </com.google.android.material.textfield.TextInputLayout>


    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/ServiciooPersonal"
        app:layout_constraintTop_toBottomOf="@+id/ServiciooPersonal"
        android:numStars="5"
        android:rating="0"
        android:stepSize=".5"
        android:isIndicator="true"
        android:layout_marginVertical="8dp"
        />

    <ImageView
        android:id="@+id/imgDownRainbow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/down_rainbow"/>

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="595dp"
        app:layout_constraintTop_toBottomOf="@id/ratingBar"
        app:layout_constraintEnd_toEndOf="@id/optionsReview"
        app:layout_constraintStart_toStartOf="@id/ratingBar"
        android:background="@color/white"
        android:text="@string/edt_comment"
        android:padding="8dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>